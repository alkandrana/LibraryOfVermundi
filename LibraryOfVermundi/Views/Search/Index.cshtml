@model Entry
@{
    ViewData["Title"] = "Library Catalog";
}

<div class="navbar navbar-left container-fluid dataDisplay">
    <div class="row">
        <ul class="list-unstyled col-3 navigation p-0 m-0">
            <li class="bg-dark">
                <a asp-action="Index" asp-controller="Search" class="text-center p-2 text-light">Search Home</a>
            </li>
            <li class="bg-dark">
                <a asp-action="ContributionForm" asp-controller="Search" class="text-center p-2 text-light">Contribution Form</a>
            </li>
            <li class="bg-dark">
                <a asp-action="Search" asp-controller="Search" class="text-center p-2 text-light">Search</a>
            </li>
            <li>
                <h5 class="text-center">Featured Article:</h5>
                @if (Model.RawContent != "")
                {
                    <h5 class="text-center">@Model.Title</h5>
                        if (Model.Content[0].Length < 100)
                        {
                            <h6 class="pt-5 fw-bold">@Model.Content[0]</h6>
                            <p class="px-3 mb-0 fst-italic">@Model.Content[1]</p>
                        }
                        else
                        {
                            <p class="px-3 mb-0 fst-italic">@Model.Content[0]</p>
                        }
                        <a class="px-3 text-end" asp-action="Reader" asp-controller="Browse" asp-route-id="@Model.EntryId">Read more...</a>
                }
            </li>
        </ul>
        <div class="col-9 main ms-0">
            <h1 class="text-center">Welcome to the Library Catalog</h1>
            <h5 class="text-center pt-5">
                Follow the links on the left to search the Library for a specific article,
                or contribute an entry to the Library's vaults.
            </h5>
            <div>
            </div>
        </div>
    </div>
</div>