@model AppUser

@{
    ViewData["Title"] = "Add a New User Profile";
    Layout = "_Layout";
}
<div class="navbar navbar-left container-fluid dataDisplay">
    <div class="row">
        <ul class="list-unstyled col-md-3 navigation p-0 m-0">
            <li class="bg-dark">
                <a asp-action="Index" asp-controller="Search" class="text-center p-2 text-light">Search</a>
            </li>
            <li class="bg-dark">
                <a asp-action="ContributionForm" asp-controller="Search" class="text-center p-2 text-light">Contribution Form</a>
            </li>
        </ul>
        <div class="col-md-9 main">
            <h2 class="p-5">Add a New User Profile</h2>
            <p class="lh-lg">
                For the purposes of our records, we must have a user profile with which to associate your contribution.
                However, for your own protection, we strongly recommend that you do not leave your legal name.
                Feel free to use your creativity in crafting an appropriate label.
            </p>

            <form method="post" class="container">
                <div class="row p-5">
                    <label asp-for="UserName" class="col-form-label col-md-4">Enter your user name</label>
                    <div class="col-md-8">
                        <input type="text" asp-for="UserName" class="form-control"/>
                    </div>
                </div>
                <button type="submit" class="btn btn-success offset-10">Save</button>
            </form>
        </div>
    </div>
</div>