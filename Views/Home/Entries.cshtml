@{
    VidewData["Title"] = "Encyclopedic Entries";
}
<h1 class="display-4">Encyclopedic Entries</h1>
<form method="post" class="container">
    <div class="row p-2">
        <label for="title" class="col-form-label col-md-2 mb-3">Title</label>
        <div class="col-md-8">
            <input id="title" name="Title" class="form-control bg-dark-subtle">
        </div>
    </div>
    <div class="row p-2">
        <label for="category" class="col-form-label col-md-2 mb-3">Category</label>
        <div class="col-md-8">
            <input id="category" name="Category" class="form-control bg-secondary-subtle">
        </div>
    </div>
    <div class="row p-2">
        <label for="content" class="col-form-label col-md-2 mb-3">Content</label>
        <div class="col-md-8">
            <input id="content" name="Content" class="form-control bg-dark-subtle">
        </div>
    </div>
    <div class="row p-2">
        <label for="name" class="col-form-label col-md-2 mb-3">User Name</label>
        <div class="col-md-8">
            <input id="name" name="Contributor.UserName" class="form-control bg-secondary-subtle">
        </div>
    </div>
</form>